<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Suppress noisy Pulsar client logs -->
    <logger name="org.apache.pulsar" level="WARN"/>
    <!-- Suppress specific race-condition WARNs from MultiTopicsConsumerImpl -->
    <logger name="org.apache.pulsar.client.impl.PatternMultiTopicsConsumerImpl" level="ERROR"/>
    <logger name="org.apache.pulsar.client.impl.MultiTopicsConsumerImpl" level="ERROR"/>
    
    <!-- Keep our application logs at INFO -->
    <logger name="com.example.pulsar" level="INFO"/>

    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>
</configuration>
